<h1>Listing guides</h1>

<table class="table table-bordered">
  <thead>
    <tr>
      <th>Name</th>
      <th>Hometown</th>
      <th>Introduction</th>
      <th>Image</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @guides.each do |guide| %>
      <tr>
        <td><%= guide.name %></td>
        <td><%= guide.hometown %></td>
        <td><%= guide.introduction %></td>
        <td><%= image_tag guide.image %></td>
        <td><%= link_to 'Show', guide %></td>
        <td><%= link_to 'Edit', edit_guide_path(guide) %></td>
        <td><%= link_to 'Destroy', guide, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Guide', new_guide_path %>
