<h1>Listing tours</h1>

<table class="table table-bordered">
  <thead>
    <tr>
      <th>Destination</th>
      <th>Guide</th>
      <th>Name</th>
      <th>Price</th>
      <th>Image</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @tours.each do |tour| %>
      <tr>
        <td><%= tour.destination.try(:name) %></td>
        <td><%= tour.guide.try(:name) %></td>
        <td><%= tour.name %></td>
        <td><%= tour.price %></td>
        <td><%= image_tag tour.image %></td>
        <td><%= link_to 'Show', tour %></td>
        <td><%= link_to 'Edit', edit_tour_path(tour) %></td>
        <td><%= link_to 'Destroy', tour, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Tour', new_tour_path, class: 'btn btn-primary' %>
