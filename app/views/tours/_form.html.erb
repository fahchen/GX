      <ul>
      <% @tour.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="form-group">
    <%= f.label :destination %><br>
    <%= f.select :destination_id, Destination.all.collect { |p| [ p.name, p.id ] }, include_blank: true, class: "form-control" %>
  </div>
  <div class="form-group">
    <%= f.label :name %><br>
    <%= f.text_field :name, class: "form-control" %>
  </div>
  <div class="form-group">
    <%= f.label :hometown %><br>
    <%= f.text_field :hometown, class: "form-control" %>
  </div>
  <div class="form-group">
    <%= f.label :introduction %><br>
    <%= f.text_area :introduction, class: "form-control" %>
  </div>
  <div class="form-group">
    <%= f.label :image %><br>
    <%= f.file_field :image, class: "form-control" %>
  </div>
  <div class="actions">
    <%= f.submit class: 'btn btn-default' %>
  </div>
<% end %>

